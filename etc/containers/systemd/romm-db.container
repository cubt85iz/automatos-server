[Unit]
Description=Container service for RomM database
Requires=romm-network.service
After=romm-network.service

[Container]
ContainerName=%p
Image=docker.io/library/postgres:16
Volume=${CONTAINER_PATH}/db:/var/lib/postgresql/data:Z
Network=romm-network

[Service]
ExecCondition=/usr/bin/test -d "${CONTAINER_PATH}/db"
ExecStartPre=/usr/bin/chown -R 999 ${CONTAINER_PATH}/db
Restart=on-failure
